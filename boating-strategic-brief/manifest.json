{
  "manifest_version": 3,
  "name": "The Boating Strategic Brief",
  "version": "1.0.0",
  "description": "Daily strategic briefing from boatingindustry.com powered by AI analysis",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "The Boating Strategic Brief"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
